  <div id="contacts">
    <% @contacts.each do |contact| %>
    <div class="contact" data-avatar="<%= contact[:avatar] %>" data-name="<%= contact[:name] %>" data-phone="<%= contact[:phone] %>" data-desc="<%= contact[:desc] %>" style="background-image: url(<%= contact[:avatar] %>);">
      <img class="iphone-no-retina" src="<%= contact[:avatar] %>"></img>
      <span class="name"><%= contact[:name] %></span>
    </div>
  <% end %>
  </div>

  <div class="hide popup" id="myModal">
    <div class="avatar">
      <img id="modal-avatar" class="thumbnail" src="http://www.gravatar.com/avatar/48986aabbdbcdeacdbc3a6dc2945a9ff.png">
    </div>
    <div class="caption">
      <h3 id="modal-name" class="user-name" >Fred Liang</h3>
      <p id="modal-desc" class="user-description">Fred is a nice person, if you have anything trouble, please come to him. If you are a girl, that is better!</p>
      <p>
        <a id="modal-call" href="tel:+8612345678" style="margin-right:2px" class="btn btn-info">&nbsp;&nbsp;&nbsp;Call&nbsp;&nbsp;&nbsp;</a>
        <a id="modal-sms" href="sms:+8612345678" class="btn btn-success">Message</a>
      </p>
    </div>
  </div>
